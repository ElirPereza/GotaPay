generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}
        
model User {
  id        String   @id @default(cuid()) // Unique ID automatically generated
  clerkId   String   @unique              // User ID in Clerk
  email     String   @unique              // User email
  role      Role     @default(USER)       // User role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clients   Client[]                     // Relationship with clients managed (if applicable)
}

model Client {
  id         Int        @id @default(autoincrement()) // Unique auto-incremented ID
  name       String
  email      String     @unique
  loans      Loan[]                            // Relationship with loans
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  userId     String?
  user       User?      @relation(fields: [userId], references: [id]) // Optional relationship with User
}

model Loan {
  id          Int       @id @default(autoincrement())
  amount      Float
  interestRate Float
  clientId    Int
  client      Client   @relation(fields: [clientId], references: [id])
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Role {
  OWNER
  ADMIN
  USER
}
